{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "lib/*": ["lib/*"],
      "core/*": ["api/@core/*"],
      "resources/*": ["resources/*"]
    }
  },
  "include": ["api", "lib", "scripts"],
  "exclude": ["node_nodules"]
}
